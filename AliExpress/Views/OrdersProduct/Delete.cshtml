<script>

    function DeleteOrdersProduct() {
        var isConfirm = confirm("Do you want to delete the item?");
        if (isConfirm) {
            $.ajax(
            {
                type: "POST",
                url: '@Url.Action("DeleteOrdersProduct", "OrdersProduct")',
                data: {
                    id: $('#Id').val()
                },
                error: function (result) {
                alert("There is a Problem, Try Again!");
                },
                success: function (result) {
                console.log(result);
                    if (result.status == true) {
                        alert(result.message);
                        window.location.href = '@Url.Action("Index", "OrdersProduct")';
                }
                else {
                    alert(result.message);
                }
                }
            });
            }
        }
</script>