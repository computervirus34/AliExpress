@model IEnumerable<AliExpress.AliexpressOrdersProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="OrdersProductTable" class="table table-striped table-bordered table-responsive table-hover" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SuppliersOrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Quantity)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.UnitPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalProductTax)
            </th>
            <th>&nbsp;&nbsp;Action&nbsp;&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SuppliersOrderId)
            </td>
            <td>
                <a href="https://@item.Url" target="_blank">
                    @Html.DisplayFor(modelItem => item.Url)
                </a>
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Specification1)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UnitPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TotalProductTax)
            </td>
            <td>
                <a href='@Url.Action("Edit","OrdersProduct", new { id = item.Id })'>
                    <i class="fa fa-edit" title="Edit"></i>
                </a> |
                <a href='@Url.Action("Details","OrdersProduct", new { id = item.Id })'>
                    <i class="fa fa-list" title="Details"></i>
                </a> |
                <a href='@Url.Action("Delete","OrdersProduct", new { id = item.Id })'>
                    <i class="fa fa-remove btn-danger" title="Delete"></i>
                </a>
            </td>
        </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#OrdersProductTable').DataTable();
    });
</script>
