@model IEnumerable<AliExpress.AliexpressProduct>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<p>
    <a asp-action="Create">Create New</a>
</p>
<table  id="ProductTable" class="table table-striped table-bordered table-responsive table-hover" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Url)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProductName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Specification1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MainImage)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Images)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Sku)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SpecInformation)
            </th>
            <th>&nbsp;&nbsp;Action&nbsp;&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Url)
                </td>
                <td class="more">
                    @Html.DisplayFor(modelItem => item.ProductName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Specification1)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.MainImage)
                </td>
                <td class="more">
                    @Html.DisplayFor(modelItem => item.Images)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Sku)
                </td>
                <td class="more">
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    <pre class="more">@Html.DisplayFor(modelItem => item.SpecInformation)</pre>
                    
                </td>
                <td>
                    <a href='@Url.Action("Edit","Products", new { id = item.Id })'>
                        <i class="fa fa-edit" title="Edit"></i>
                    </a> |
                    <a href='@Url.Action("Details","Products", new { id = item.Id })'>
                        <i class="fa fa-list" title="Details"></i>
                    </a> |
                    <a href='@Url.Action("Delete","Products", new { id = item.Id })'>
                        <i class="fa fa-remove btn-danger" title="Delete" ></i>
                    </a>
                    @*@Html.ActionLink(" ", "Edit", new { id = item.Id }) |*@
                    <!--@Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })-->
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#ProductTable').DataTable();
    });
</script>