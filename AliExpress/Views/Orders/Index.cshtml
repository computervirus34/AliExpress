@model IEnumerable<AliExpress.AliexpressOrder>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<p>
    <a asp-action="Create">Create New</a>
</p>
<table id="OrderTable" class="table table-striped table-bordered table-responsive table-hover" style="width:100%" @*class="table  table-bordered table-responsive table-hover"*@>
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.OrderDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SuppliersOrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalUnitsInOrder)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalCostOfProducts)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CostOfShipping)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalOrderTax)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Currency)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AdjustedPrice)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TotalAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Discount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NzSupplyOrderId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ReceiptDocument)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AliExpressStoreName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.OrderCancelled)
            </th>
            <th class="nowrap">&nbsp;&nbsp;Action&nbsp;&nbsp;</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.SuppliersOrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalUnitsInOrder)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalCostOfProducts)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.CostOfShipping)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalOrderTax)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Currency)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AdjustedPrice)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.TotalAmount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Discount)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NzSupplyOrderId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ReceiptDocument)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AliExpressStoreName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.OrderCancelled)
                </td>
                <td>
                    <a href='@Url.Action("Edit","Orders", new { id = item.Id })'>
                        <i class="fa fa-edit" title="Edit"></i>
                    </a> |
                    <a href='@Url.Action("Details","Orders", new { id = item.Id })'>
                        <i class="fa fa-list" title="Details"></i>
                    </a> |
                    <a href='@Url.Action("Delete","Orders", new { id = item.Id })'>
                        <i class="fa fa-remove btn-danger" title="Delete"></i>
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
<script>
    $(document).ready(function () {
        $('#OrderTable').DataTable();
    });
</script>